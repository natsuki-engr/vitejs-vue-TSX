{
  "timezone": "Asia/Tokyo",
  "extends": [
    "config:recommended"
  ],
  "schedule": [
    "* 17 * * 1"
  ],
  "automerge": false,
  "dependencyDashboard": true,
  "rebaseWhen": "conflicted",
  "minimumReleaseAge": "1 week",
  "packageRules": [
    {
      "groupName": "vue",
      "matchPackageNames": ["vue", "vue-tsc", "@vue/tsconfig", "@vitejs/plugin-vue", "@vitejs/plugin-vue-jsx"]
    },
    {
      "groupName": "testing tools",
      "matchPackageNames": ["vitest", "happy-dom", "@testing-library/vue"]
    }
  ]
}
